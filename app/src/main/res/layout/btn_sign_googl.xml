<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_btn"
    android:background="@drawable/shape_btn_sign_up"
    android:gravity="center"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <ImageView
        android:layout_width="@dimen/ic_googl_size"
        android:layout_height="@dimen/ic_googl_size"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_google" />

    <TextView
        android:id="@+id/btn_googl_sign"
        style="@style/ButtonGooglStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        tools:text="@string/sign_in_with_google" />

</LinearLayout>