<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_user_photo"
            app:layout_constraintEnd_toStartOf="@id/toolbar_user_photo"
            app:layout_constraintTop_toTopOf="@id/toolbar_user_photo"
            android:text="Михаил" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/toolbar_user_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_empty_photo"
            app:civ_border_color="@color/yellow"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_200">

        <TextView
            android:id="@+id/vacancyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_item_vacancy_margins"
            android:ellipsize="end"
            android:fontFamily="@font/work_sans_bold"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/item_vacancy_job_position_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="iOS разработчик" />

        <TextView
            android:id="@+id/titleEmployer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_item_vacancy_margins"
            android:ellipsize="end"
            android:fontFamily="@font/lato"
            android:maxWidth="120dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/item_vacancy_employ_name_text"
            tools:text="Мастерская фотографии СВЕТОПИСЬ"
            app:layout_constraintTop_toBottomOf="@id/vacancyTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_item_vacancy_margins"
            android:ellipsize="end"
            android:fontFamily="@font/lato"
            android:maxLines="1"
            android:text="10 000 - 20 000руб"
            android:textColor="@color/black"
            android:textSize="@dimen/item_vacancy_salary_text"
            app:layout_constraintTop_toBottomOf="@id/titleEmployer"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/vacancyDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_vacancy_inside_middle_margin"
            android:layout_marginStart="@dimen/border_item_vacancy_margins"
            android:ellipsize="end"
            android:fontFamily="@font/lato_light"
            android:lineSpacingExtra="2dp"
            android:maxLines="4"
            android:text="Ищем разработчика в основную команду. Все требования кандидатам в личку, если у вас нет реального опыта работы, то пропускайте"
            android:textColor="@color/second_text_color"
            android:textSize="@dimen/item_vacancy_description_text"
            app:layout_constraintTop_toBottomOf="@id/salary"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/locationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vacancy_location_margin"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textSize="@dimen/item_vacancy_employ_name_text"
            android:text="@string/location_title"
            app:layout_constraintTop_toBottomOf="@id/vacancyDescription"
            app:layout_constraintStart_toStartOf="@id/vacancyDescription"/>

        <TextView
            android:id="@+id/typeOfEmploymentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vacancy_location_margin"
            android:layout_marginStart="@dimen/border_item_vacancy_margins"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textSize="@dimen/item_vacancy_employ_name_text"
            android:text="@string/type_of_employment_title"
            app:layout_constraintStart_toEndOf="@id/locationTitle"
            app:layout_constraintTop_toBottomOf="@id/vacancyDescription"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/lato_light"
            android:textColor="@color/second_text_color"
            app:layout_constraintStart_toStartOf="@id/locationTitle"
            app:layout_constraintTop_toBottomOf="@id/locationTitle"
            tools:text="Санкт-Петербург"/>

        <TextView
            android:id="@+id/typeOfEmployment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/lato_light"
            android:textColor="@color/second_text_color"
            app:layout_constraintTop_toBottomOf="@id/typeOfEmploymentTitle"
            app:layout_constraintStart_toStartOf="@id/typeOfEmploymentTitle"
            tools:text="Полный рабочий день"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@id/location"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/gray_200"
        android:orientation="vertical">

        <TextView
            android:id="@+id/skills_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:text="@string/required_skills"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/DescriptionTitleTextAppearance.HeaderAppearance" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reqSkills"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/skills_title"
            app:layout_constraintStart_toStartOf="@id/skills_title"/>

        <TextView
            android:id="@+id/company_description_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:text="@string/company_description"
            android:textAppearance="@style/DescriptionTitleTextAppearance.HeaderAppearance"
            app:layout_constraintTop_toBottomOf="@id/reqSkills"
            app:layout_constraintStart_toStartOf="@id/reqSkills"/>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_description_size"
            android:background="@drawable/gradient_horizontal_divider"
            app:layout_constraintTop_toBottomOf="@id/company_description_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/company_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            tools:text="CompanyDescr"
            android:textAppearance="@style/DescriptionTextAppearance.SecondTextAppearance"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/responsibilities_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/lato"
            android:text="@string/responsibilities_title"
            android:textSize="@dimen/title_description_text_size"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/company_description"/>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_description_size"
            android:background="@drawable/gradient_horizontal_divider"
            app:layout_constraintTop_toBottomOf="@id/responsibilities_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/responsibilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/divider2"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/requirements_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/lato"
            android:text="@string/requirements_title"
            android:textSize="@dimen/title_description_text_size"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/responsibilities"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_description_size"
            android:background="@drawable/gradient_horizontal_divider"
            app:layout_constraintTop_toBottomOf="@id/requirements_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/requirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/divider3"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/conditions_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/lato"
            android:text="@string/conditions_title"
            android:textSize="@dimen/title_description_text_size"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/requirements"/>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_description_size"
            android:background="@drawable/gradient_horizontal_divider"
            app:layout_constraintTop_toBottomOf="@id/conditions_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/divider4"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/respond_button"
            android:layout_width="158dp"
            android:layout_height="34dp"
            android:layout_gravity="end"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_btn_enter_with_stroke"
            android:fontFamily="@font/work_sans_semibold"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingTop="2dp"
            android:paddingEnd="16dp"
            android:paddingBottom="2dp"
            android:text="@string/respond"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/conditions"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/gray_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/respond_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</LinearLayout>