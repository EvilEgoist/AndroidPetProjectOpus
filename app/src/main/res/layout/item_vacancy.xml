<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/gray_200"
    android:layout_marginBottom="30dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/border_item_vacancy_margins"
        android:layout_marginTop="@dimen/border_item_vacancy_top_margins"
        android:layout_marginEnd="@dimen/border_item_vacancy_margins"
        android:gravity="start"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/item_vacancy_inside_minimum_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleVacancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/work_sans_bold"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/item_vacancy_job_position_text"
                tools:text="iOS разработчик" />

            <TextView
                android:id="@+id/employerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/lato"
                android:maxWidth="120dp"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/item_vacancy_employ_name_text"
                tools:text="iOS разработчик" />

            <TextView
                android:id="@+id/salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/lato"
                android:maxLines="1"
                android:text="10 000 - 20 000руб"
                android:textColor="@color/black"
                android:textSize="@dimen/item_vacancy_salary_text" />
        </LinearLayout>

        <ImageView
            android:id="@+id/employerImage"
            android:layout_width="45dp"
            android:layout_height="45dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/vacancyDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/border_item_vacancy_margins"
        android:layout_marginTop="@dimen/item_vacancy_inside_middle_margin"
        android:layout_marginEnd="@dimen/border_item_vacancy_margins"
        android:ellipsize="end"
        android:fontFamily="@font/lato"
        android:lineSpacingExtra="2dp"
        android:maxLines="4"
        android:text="Идейные соображения высшего порядка, а также реализация намеченных плановых заданий способствует подготовки и реализации форм развития. Не следует, однако забывать, что постоянный количественный рост и сфера нашей активности представляет собой интересный эксперимент проверки соответствующий условий активизации. Не следует, однако забывать, что дальнейшее развитие различных форм деятельности позволяет выполнять важные задания по разработке дальнейших направлений развития. "
        android:textColor="@color/second_text_color"
        android:textSize="@dimen/item_vacancy_description_text" />

    <LinearLayout
        android:id="@+id/skillsGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/border_item_vacancy_margins"
        android:layout_marginTop="@dimen/item_vacancy_inside_middle_margin"
        android:layout_marginEnd="@dimen/border_item_vacancy_margins"
        android:divider="@drawable/divider_skills_group"
        android:orientation="horizontal"
        android:showDividers="middle" />

    <TextView
        android:id="@+id/watchMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/item_vacancy_inside_middle_margin"
        android:layout_marginEnd="@dimen/border_item_vacancy_top_margins"
        android:layout_marginBottom="@dimen/border_item_vacancy_top_margins"
        android:fontFamily="@font/lato"
        android:text="Узнать больше"
        android:textColor="@color/second_text_color"
        android:textSize="@dimen/item_vacancy_watch_more_text" />
</LinearLayout>
