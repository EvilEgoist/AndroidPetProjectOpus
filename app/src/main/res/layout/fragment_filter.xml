<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/black">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="@string/filters_title"
            android:textColor="@color/light_background"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/toolbar_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_user_photo"
            app:layout_constraintEnd_toStartOf="@id/toolbar_user_photo"
            app:layout_constraintTop_toTopOf="@id/toolbar_user_photo"
            tools:text="Михаил" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/toolbar_user_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_empty_photo_tool_bar"
            app:civ_border_color="@color/yellow"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="10dp"
            android:background="@color/gray_200"
            android:orientation="vertical">

            <TextView
                android:id="@+id/filter_settings_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="24dp"
                android:text="@string/filter_settings"
                android:textAppearance="@style/FilterTitleTextAppearance"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_fields"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />

            <com.google.android.material.chip.Chip
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:text="@string/more" />

            <TextView
                android:id="@+id/search_skills"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp"
                android:text="@string/required_skills"
                android:textAppearance="@style/FilterSubtitleTextAppearance"
                android:textSize="20sp" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/skills_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/shape_search_view_lists"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:theme="@style/AppSearchView"
                app:searchHintIcon="@drawable/ic_search"
                app:searchIcon="@drawable/ic_search">

            </androidx.appcompat.widget.SearchView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/choosen_skills_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:text="@string/chosen_skills"
                android:textAppearance="@style/FilterTitleTextAppearance"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chosen_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp" />

            <TextView
                android:id="@+id/salary_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp"
                android:text="@string/filter_salary_title"
                android:textAppearance="@style/FilterSubtitleTextAppearance"
                android:textSize="18sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <TextView
                    android:id="@+id/from_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="100dp"
                    android:text="@string/filter_from_interval_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/start_salary_filter"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="@dimen/filter_edit_text_width"
                    android:layout_height="@dimen/filter_edit_text_height"
                    android:layout_marginStart="6dp"
                    app:endIconMode="none"
                    app:hintEnabled="false"
                    app:layout_constraintBottom_toBottomOf="@id/from_title"
                    app:layout_constraintStart_toEndOf="@id/from_title"
                    app:layout_constraintTop_toTopOf="@id/from_title">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/start_salary"
                        style="@style/TextFormStyle"
                        android:layout_width="@dimen/filter_edit_text_width"
                        android:layout_height="@dimen/filter_edit_text_height"
                        android:gravity="end"
                        android:hint="@string/filter_start_salary_hint"
                        android:inputType="numberDecimal"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/currency1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/filter_rub_title"
                    app:layout_constraintBottom_toBottomOf="@+id/from_title"
                    app:layout_constraintStart_toEndOf="@id/start_salary_filter"
                    app:layout_constraintTop_toTopOf="@+id/from_title" />

                <TextView
                    android:id="@+id/to_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/filter_to_interval_title"
                    app:layout_constraintStart_toEndOf="@id/currency1"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/end_salary_filter"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="@dimen/filter_edit_text_width"
                    android:layout_height="@dimen/filter_edit_text_height"
                    android:layout_marginStart="6dp"
                    app:endIconMode="none"
                    app:hintEnabled="false"
                    app:layout_constraintBottom_toBottomOf="@id/to_title"
                    app:layout_constraintStart_toEndOf="@id/to_title"
                    app:layout_constraintTop_toTopOf="@id/to_title">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/end_salary"
                        style="@style/TextFormStyle"
                        android:layout_width="@dimen/filter_edit_text_width"
                        android:layout_height="@dimen/filter_edit_text_height"
                        android:gravity="end"
                        android:hint="@string/filter_end_salary_hint"
                        android:inputType="numberDecimal"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/currency2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/filter_rub_title"
                    app:layout_constraintBottom_toBottomOf="@+id/to_title"
                    app:layout_constraintStart_toEndOf="@id/end_salary_filter"
                    app:layout_constraintTop_toTopOf="@+id/to_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="158dp"
                android:layout_height="34dp"
                android:layout_gravity="right"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_btn_enter_with_stroke"
                android:fontFamily="@font/work_sans_regular"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="2dp"
                android:paddingEnd="16dp"
                android:paddingBottom="2dp"
                android:text="@string/apply"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
