<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_company_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_200">

        <TextView
            android:id="@+id/vacancyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_item_vacancy_margins"
            android:ellipsize="end"
            android:fontFamily="@font/work_sans_bold"
            android:maxLines="1"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/item_vacancy_job_position_text"
            tools:text="iOS разработчик"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/edit_company_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/titleEmployer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_item_vacancy_margins"
            android:ellipsize="end"
            android:fontFamily="@font/lato_bold"
            android:maxWidth="120dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/item_vacancy_employ_name_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vacancyName"
            tools:text="Мастерская фотографии СВЕТОПИСЬ" />

        <TextView
            android:id="@+id/profileSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_item_vacancy_margins"
            android:ellipsize="end"
            android:fontFamily="@font/lato"
            android:maxLines="1"
            android:text="10 000 - 20 000руб"
            android:textColor="@color/black"
            android:textSize="@dimen/item_vacancy_salary_text"
            app:layout_constraintTop_toBottomOf="@id/titleEmployer"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_vacancy_inside_middle_margin"
            android:layout_marginStart="@dimen/border_item_vacancy_margins"
            android:ellipsize="end"
            android:fontFamily="@font/lato_light"
            android:lineSpacingExtra="2dp"
            android:maxLines="4"
            tools:text="Ищем разработчика в основную команду. Все требования кандидатам в личку, если у вас нет реального опыта работы, то пропускайте"
            android:textColor="@color/second_text_color"
            android:textSize="@dimen/item_vacancy_description_text"
            app:layout_constraintTop_toBottomOf="@id/profileSalary"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/locationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vacancy_location_margin"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/item_vacancy_employ_name_text"
            android:text="@string/location_title"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintStart_toStartOf="@id/description"/>

        <TextView
            android:id="@+id/typeOfEmploymentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/border_item_vacancy_margins"
            android:layout_marginTop="@dimen/vacancy_location_margin"
            android:fontFamily="@font/lato_bold"
            android:text="@string/type_of_employment_title"
            android:textColor="@color/black"
            android:textSize="@dimen/item_vacancy_employ_name_text"
            app:layout_constraintStart_toEndOf="@id/locationTitle"
            app:layout_constraintTop_toBottomOf="@id/description" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/CompanyProfileTextAppearance"
            app:layout_constraintStart_toStartOf="@id/locationTitle"
            app:layout_constraintTop_toBottomOf="@id/locationTitle"
            tools:text="Санкт-Петербург"/>

        <TextView
            android:id="@+id/typeOfEmployment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/CompanyProfileTextAppearance"
            app:layout_constraintTop_toBottomOf="@id/typeOfEmploymentTitle"
            app:layout_constraintStart_toStartOf="@id/typeOfEmploymentTitle"
            tools:text="Полный рабочий день"/>

        <TextView
            android:id="@+id/requiredLevelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/item_vacancy_employ_name_text"
            app:layout_constraintTop_toBottomOf="@id/location"
            app:layout_constraintStart_toStartOf="@id/location"
            android:text="@string/required_level"/>

        <TextView
            android:id="@+id/requiredLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Senior"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/CompanyProfileTextAppearance"
            app:layout_constraintStart_toStartOf="@id/typeOfEmployment"
            app:layout_constraintTop_toBottomOf="@id/typeOfEmployment"/>

        <TextView
            android:id="@+id/watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/item_vacancy_inside_middle_margin"
            android:layout_marginEnd="@dimen/border_item_vacancy_top_margins"
            android:layout_marginBottom="@dimen/border_item_vacancy_top_margins"
            android:fontFamily="@font/lato"
            android:text="@string/watch"
            android:textColor="#585DD2"
            android:textSize="@dimen/item_vacancy_watch_more_text"
            app:layout_constraintTop_toBottomOf="@id/requiredLevel"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/watch"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/expanded_vacancy_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_200"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/skills_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:text="@string/required_skills"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/header_description_text_size"
            android:textAppearance="@style/DescriptionTitleTextAppearance" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reqSkills"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:overScrollMode="never" />

        <TextView
            android:id="@+id/company_description_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:text="@string/company_description"
            android:textAppearance="@style/DescriptionTitleTextAppearance.HeaderAppearance" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_description_size"
            android:background="@drawable/gradient_horizontal_divider" />

        <TextView
            android:id="@+id/company_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            tools:text="CompanyDescr"
            android:textAppearance="@style/DescriptionTextAppearance.SecondTextAppearance" />

        <TextView
            android:id="@+id/responsibilities_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/lato"
            android:text="@string/responsibilities_title"
            android:textSize="@dimen/title_description_text_size"
            android:textColor="@color/black" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_description_size"
            android:background="@drawable/gradient_horizontal_divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/responsibilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/requirements_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/lato"
            android:text="@string/requirements_title"
            android:textSize="@dimen/title_description_text_size"
            android:textColor="@color/black" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_description_size"
            android:background="@drawable/gradient_horizontal_divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/requirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/conditions_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/lato"
            android:text="@string/conditions_title"
            android:textSize="@dimen/title_description_text_size"
            android:textColor="@color/black" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_description_size"
            android:background="@drawable/gradient_horizontal_divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/gray_200"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/white"/>


    </LinearLayout>
</LinearLayout>