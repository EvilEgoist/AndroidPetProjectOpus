<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/toolbar_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_user_photo"
            app:layout_constraintEnd_toStartOf="@id/toolbar_user_photo"
            app:layout_constraintTop_toTopOf="@id/toolbar_user_photo"
            tools:text="Михаил" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/toolbar_user_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_empty_photo_tool_bar"
            app:civ_border_color="@color/yellow"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_200">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/company_photo"
                    style="@style/VacancyDescriptionCircleImageViewStyle"
                    android:layout_width="@dimen/resume_circle_image_view_size"
                    android:layout_height="@dimen/resume_circle_image_view_size"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/edit_company_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Мастерская фотографии СВЕТОПИСЬ"
                    android:fontFamily="@font/lato"
                    android:ellipsize="end"
                    android:maxWidth="280dp"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:textSize="@dimen/company_profile_name_size"
                    app:layout_constraintStart_toEndOf="@id/company_photo"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/locationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="@dimen/company_profile_loacation_title_margin"
                    android:fontFamily="@font/lato"
                    android:text="@string/location_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_vacancy_employ_name_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/company_photo" />

                <TextView
                    android:id="@+id/companyLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_light"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/locationTitle"
                    app:layout_constraintTop_toTopOf="@id/locationTitle"
                    tools:text="Санкт-Петербург"/>

                <TextView
                    android:id="@+id/companyDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/lato_light"
                    android:lineSpacingExtra="2dp"
                    tools:text="Здесь краткое описание компании, Здесь краткое описание компании, Здесь краткое описание компании, Здесь краткое описание компании"
                    app:layout_constraintTop_toBottomOf="@id/locationTitle"
                    app:layout_constraintStart_toStartOf="@id/locationTitle"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/gray_200"
                    app:layout_constraintTop_toBottomOf="@id/companyDescription"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/gray_200"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vacancies"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/work_sans_semibold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_vacancy_job_position_text"/>

                <include layout="@layout/divider_horizontal" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/vacanciesRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
