<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

    <style name="EditTextLight">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textSize">@dimen/title_description_text_size</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_500</item>
    </style>

    <style name="EditTextDateLight">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textSize">@dimen/main_text_description_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/second_text_color</item>
        <item name="android:minWidth">68dp</item>
    </style>

    <style name="EditTextDescriptionLight">
        <item name="android:textSize">@dimen/main_text_description_size</item>
        <item name="android:gravity">top</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
