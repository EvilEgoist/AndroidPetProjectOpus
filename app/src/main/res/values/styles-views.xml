<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">none</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="errorIconTint">@color/red</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="InputTextLayout.Name" parent="InputTextLayout">
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="InputTextLayout.Password" parent="InputTextLayout">
        <item name="endIconMode">password_toggle</item>
        <item name="android:inputType">text|textPassword</item>
        <item name="passwordToggleDrawable">@drawable/selector_show_password</item>
    </style>

    <style name="InputTextLayout.ConfirmPassword" parent="InputTextLayout">
        <item name="endIconMode">custom</item>
        <item name="confirmIconDrawable">@drawable/ic_success</item>
        <item name="confirmIconTint">@color/green</item>
        <item name="android:inputType">text|textPassword</item>
    </style>

    <style name="InputEditText">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">@dimen/form_text_size</item>
        <item name="android:textColorHint">@color/gray_500</item>
    </style>

    <style name="InputEditText.Name" parent="InputEditText">
        <item name="android:hint">@string/hint_user_name</item>
        <item name="android:inputType">text|textCapSentences</item>
    </style>

    <style name="InputEditText.Surname" parent="InputEditText">
        <item name="android:hint">@string/hint_user_surname</item>
        <item name="android:inputType">text|textCapSentences</item>
    </style>

    <style name="InputEditText.Email" parent="InputEditText">
        <item name="android:hint">@string/hint_email_title</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="InputEditText.Password" parent="InputEditText">
        <item name="android:hint">@string/hint_first_password_form</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="InputEditText.ConfirmPassword" parent="InputEditText">
        <item name="android:hint">@string/hint_second_password_from</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="BaseButton">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseButton.SignButton" parent="BaseButton">
        <item name="android:paddingStart">@dimen/custom_sign_button_padding</item>
        <item name="android:paddingEnd">@dimen/custom_sign_button_padding</item>
    </style>

    <style name="BaseButton.LightText" parent="BaseButton">
        <item name="android:textAppearance">@style/ButtonTextAppearance.LightText</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/shape_search_view_lists</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="searchHintIcon">@drawable/ic_search</item>
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

    <style name="EditTextLight">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textSize">@dimen/title_description_text_size</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_500</item>
    </style>

    <style name="EditTextDateLight">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textSize">@dimen/main_text_description_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/second_text_color</item>
        <item name="android:minWidth">68dp</item>
    </style>

    <style name="EditTextDescriptionLight">
        <item name="android:textSize">@dimen/main_text_description_size</item>
        <item name="android:gravity">top</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
