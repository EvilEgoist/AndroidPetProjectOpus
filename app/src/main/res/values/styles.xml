<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextFormStyle">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">@dimen/form_text_size</item>
        <item name="android:textColorHint">@color/gray_500</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="AppTitleAppearance">
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/app_title_text_size</item>
    </style>

    <style name="AppTitleAppearance.SecondAppTitleAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubtitleTextAppearance">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/greeting_text_size</item>
    </style>

    <style name="SubtitleTextAppearance.SecondSubtitleAppearance">
        <item name="android:textColor">@color/second_text_color</item>
    </style>

    <style name="CheckBoxFieldOfActivityStyle">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:minHeight">@dimen/min_height_check_box</item>
        <item name="android:textSize">@dimen/check_box_field_of_activity_text_size</item>
    </style>


    <style name="DescriptionTitleTextAppearance">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DescriptionTitleTextAppearance.HeaderAppearance">
        <item name="android:textSize">@dimen/header_description_text_size</item>
    </style>

    <style name="DescriptionTitleTextAppearance.TitleAppearance">
        <item name="android:textSize">@dimen/title_description_text_size</item>
    </style>

    <style name="DescriptionTitleTextAppearance.SubtitleAppearance">
        <item name="android:textSize">@dimen/main_text_description_size</item>
    </style>

    <style name="DescriptionTextAppearance">
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DescriptionTextAppearance.MainAppearance">
        <item name="android:textSize">@dimen/main_text_description_size</item>
    </style>

    <style name="DescriptionTextAppearance.SecondTextAppearance">
        <item name="android:textSize">@dimen/main_text_description_size</item>
        <item name="android:textColor">@color/second_text_color</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="DescriptionTextAppearance.MinimumTextAppearance">
        <item name="android:textSize">@dimen/minimum_text_size</item>
        <item name="android:textColor">@color/second_text_color</item>
    </style>

    <style name="DescriptionActiveTextAppearance">
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DescriptionActiveTextAppearance.MainAppearance">
        <item name="android:textSize">@dimen/main_text_description_size</item>
    </style>

    <style name="DescriptionActiveTextAppearance.TitleAppearance">
        <item name="android:textSize">@dimen/header_active_text_size</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
    </style>

    <style name="DescriptionTextAppearance.TitleSecondTextColorAppearance">
        <item name="android:textSize">@dimen/title_description_text_size</item>
        <item name="android:textColor">@color/second_text_color</item>
    </style>

    <style name="ToolBarTextAppearance">
        <item name="android:textSize">@dimen/vacancy_activity_top_title</item>
        <item name="titleTextColor">@color/second_text_color</item>
    </style>

</resources>