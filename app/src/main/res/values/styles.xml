<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextFormStyle" >
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">@dimen/form_text_size</item>
        <item name="android:textColorHint">@color/gray_500</item>
    </style>

    <style name="ButtonTextStyle" >
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="AppTitleAppearance" >
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/app_title_text_size</item>
    </style>

    <style name="AppTitleAppearance.SecondAppTitleAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubtitleTextAppearance">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/greeting_text_size</item>
    </style>

    <style name="SubtitleTextAppearance.SecondSubtitleAppearance">
        <item name="android:textColor">@color/second_text_color</item>
    </style>

    <style name="CheckBoxFieldOfActivityStyle">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:minHeight">@dimen/min_height_check_box</item>
        <item name="android:textSize">@dimen/check_box_field_of_activity_text_size</item>
    </style>

</resources>